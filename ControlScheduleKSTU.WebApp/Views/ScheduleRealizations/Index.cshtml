        Текущее время: <b id="txt"></b>
           
            <script type="text/javascript">
                function startTime()
                {
                    var tm=new Date();
                    var h=tm.getHours();
                    var m=tm.getMinutes();
                    var s=tm.getSeconds();
                    m=checkTime(m);
                    s=checkTime(s);
                    document.getElementById('txt').innerHTML=h+":"+m+":"+s;
                    t=setTimeout('startTime()',1000);
                }
                function checkTime(i)
                {
                    if (i<10)
                    {
                        i="0" + i;
                    }
                    return i;
                }
                 startTime();
            </script>
           
        
    </div>
